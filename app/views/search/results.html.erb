
<h2>Search Results</h2>


<h3> Challenges</h3>
<table>
  <thead>
    <tr>
      <th>Proposed By</th>
      <th>Title</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @challenges.each do |challenge| %>
      <tr>
        <td><%= @allusers.find(challenge.user_id).username %></td>
        <td><%= challenge.name %></td>
        <td><%= challenge.score %></td>
        <td><%= link_to 'Show', challenge %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Challenge', new_challenge_path %>
<div>
<h3> Users</h3>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      <th>Points</th>
      <th>Team</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.points %></td>
        <td><%= user.team_id %></td>
        <td><%= user.admin ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_user_path %>
</div>
<br>