<p>
  <strong>User:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Name:</strong>
  <%= @challenge.name %>
</p>

<p>
  <strong>Score:</strong>
  <%= @challenge.score %>
</p>

<%= link_to 'New Submission', new_challenge_submission_path(@challenge) %>

<h3> Submissions: </h3>
<table>
  <thead>
    <tr>
      <th><strong>Submitted By</strong></th>
      <th><strong>Score</strong></th>
      <th><strong>URL</strong></th>
    </tr>
  </thead>
  <tbody>
  <% @challsubmissions.each do |submission| %>
  <tr>
    <td><%= submission.user.username %></td>
    <td><%= submission.score %></td>
    <td><a href="<%= submission.url %>"> <%=submission.url %></a></td>
  </tr>
  <% end %>
</tbody>
</table>


<%= link_to 'Edit', edit_challenge_path(@challenge) %> |
