<div class="mb-1">
    <span class="h1"><%= @challenge.name %></span>
    <span class="text-muted h6">Created by <%= link_to @cre_user.username, @cre_user %></span>
    <% if @challenge.us_chal_interactions.where(:interaction => "created").first.user == current_user %>
    <span class="h6"><%= link_to 'Edit', edit_challenge_path(@challenge) %></span>
      <%= button_to 'Destroy', @challenge, method: :delete, data: { confirm: 'Are you sure?' }, form_class: "inline ", class: "btn-outline-info" %>
    <% end %>
</div>

<p>Score: <%= @challenge.score %></p>

<p class="card-text">
  <% if !@interaction || @interaction.interaction != "created" %>
    <% if !@interaction %>
      <%= link_to("+1", {:action => 'upvote', :id => @challenge.id, :st => 'none', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %> /
      <%= link_to("-1", {:action => 'downvote', :id => @challenge.id, :st => 'none', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %>
    <% else %>
      <% case @interaction.interaction %>
      <% when "neutral" %>
        <%= link_to("+1", {:action => 'upvote', :id => @challenge.id, :st => 'neither', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %> /
        <%= link_to("-1", {:action => 'downvote', :id => @challenge.id, :st => 'neither', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %>
      <% when "liked" %>
        <%= link_to("cancel", {:action => 'upvote', :id => @challenge.id, :st => 'like', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %> /
        <%= link_to("-1", {:action => 'downvote', :id => @challenge.id, :st => 'like', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %>
      <% else %>
        <%= link_to("+1", {:action => 'upvote', :id => @challenge.id, :st => 'dislike', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %> /
        <%= link_to("-cancel", {:action => 'downvote', :id => @challenge.id, :st => 'dislike', :user => @user.id, :authenticity_token => form_authenticity_token()}, remote: true, method: :post) %>
      <% end %>
    <% end %>
  <% end %>
</p>

<%= link_to 'New Submission', new_challenge_submission_path(@challenge), class: "btn btn-secondary" %>

<div class="card-deck-wrapper mt-2">
  <div class="card-deck">
  <% @challenge.submissions.sort_by { |submission| submission.score}.reverse!.each do |submission| %>
      <div class="card submission" data-url="<%= challenge_submission_path(@challenge, submission)%>">
          <div class="card-block">
            <h4 class="card-title">Submission <small class="h6">By: <%= submission.user_interactions.where(:interaction => "created").first.user.username %></h4>
          </div>
          <% if submission.thumbnail? %>
            <img height="100px" src="<%= submission.thumbnail %>" alt="Card image">
          <% end%>
          <div class="card-block">
            <p class="card-text">Score: <%= submission.score %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $('.submission').click(function(){
    window.location.href = $(this).data('url');
  });
</script>

