<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong>Submitting Challenge from:</strong> <%= @user.username %>
  </div>
  <div class="form-group">
    Challenge Title<br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
   <div class="form-group">
    Challenge Description<br>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="actions">
    <%= link_to 'Back', challenges_path, :class=>"btn btn-secondary" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
